{
    "name": "passendo/openrtb-php",
    "description": "A modern, PSR-4 compliant PHP library for OpenRTB specifications 2.4, 2.6, and 3.0.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Passendo",
            "email": "dv@passendo.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "ext-dom": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "OpenRTB\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenRTB\\Tests\\v3\\": "tests/v3/",
            "OpenRTB\\Tests\\v26\\": "tests/v26/",
            "OpenRTB\\Tests\\Common\\": "tests/Common/",
            "OpenRTB\\Tests\\Factory\\": "tests/Factory/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
